<!DOCTYPE html>
<html>
<head>
  <title>PNPI</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> texture-background">

<%= content_tag :div, notice, class: 'flash notice' if notice %>
<%= content_tag :div, alert,  class: 'flash alert'  if alert %>

<%= content_tag :nav do %>
	<%= render partial: 'menus/home' %>
	<%= render partial: 'menus/admin' if admin? %>
	<%= render partial: 'menus/user' %>
<% end %>

<%= yield %>

</body>
</html>
