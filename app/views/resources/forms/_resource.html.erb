<%= semantic_form_for @resource, url: @resource.url(:show), html: { class: "resource" } do |f| %>
	
	<%= f.input :active, as: :hidden, input_html: { class: 'active' }, value: admin? || f.object.active? %>
	
	<%= f.inputs :picture, class: 'block fifth' do %>
		<%= content_tag :div, '', class: 'block-padding' do %>
			<%= image_tag f.object.picture.url(:thumb) %>
			<%= f.input :picture %>
		<% end %>
	<% end %>

	<%= f.inputs :basic, class: 'block two-fifth' do %>
		<%= content_tag :div, '', class: 'block-padding' do %>
			<%= render partial: "/resources/forms/details", locals: { f: f, type: f.object.type.downcase.to_sym } %>
		<% end %>
	<% end %>
	
	<%= f.inputs :tags, class: 'block two-fifth' do %>
		<%= content_tag :div, '', class: 'block-padding' do %>
			<%= categories_html f, @categories %>
			<% tag_collection(f.object).each do |tag| %>
				<%= check_box_collection f, :tags, tag[1], tag[0], :tag %>
			<% end %>
		<% end %>
	<% end %>
	
	<%= f.actions do %>
		<%= f.submit %>
		<%= resource_action :submit, 	 f.object, admin? %>
		<%= resource_action :deactivate, f.object, admin? %>
		<%= resource_action :delete, 	 f.object, admin? %>
	<% end %>
<% end %>