<%= content_tag :li, '', class: 'nested-resources', data: { 'resource-type' => name.pluralize } do %>
	<%= content_tag :ul do %>
		<% f.object.send(field).each do |nested| %>
			<%= link_to nested_image(nested), 'javascript:;', class: 'nested-resource-link selectable slide-to', data: { 'resource-id' => nested.id, 'target' => 'nestedAnchor' }, title: nested.name %>
		<% end %>
	<% end %>
	
	<%= content_tag :ul, '', class: "nested-#{name.pluralize}" do %>
		<% f.semantic_fields_for field do |nested| %>
			<%= content_tag :fieldset, '', class: "nested-resource nested-#{name}", data: { 'resource-id' => nested.object.id } do %>
	    		<%= render partial: "/resources/forms/#{name}", locals: { f: nested, partial: true } %>
			<% end %>
	    <% end %>
	<% end %>
<% end %>
