<%= content_tag :h1, "Listing #{@scope.to_s.humanize} #{@type.pluralize}"%>

<% @resources.each do |resource| %>
	<%= render partial: '/resources/preview', locals: { resource: resource } %>
<% end unless @resources.empty? %>
<%= content_tag :span, "No #{@type.pluralize} found", class: 'no-results' if @resources.empty? %>
