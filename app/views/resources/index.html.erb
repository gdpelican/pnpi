<h1>Listing <%= @type.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
      	<td><%= resource.name %></td>
      	<td><%= resource.type %></td>
      	<td><%= resource.description %></td>
        <td><%= link_to 'Show', resource.url(:show) %></td>
        <td><%= link_to 'Edit', resource.url(:edit) %></td>
        <td><%= link_to 'Destroy', resource.url(:show), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

