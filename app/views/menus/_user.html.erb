<%= content_tag :div, '', class: 'menu', title: if current_user then 'Account options' else 'Sign In' end do %>
	<%= user_avatar || font_icon(current_user ? 'user' : 'key') %>
	<%= content_tag :ul, class: 'dashboard user-dashboard' do %>
		<% if current_user %>
			<%= content_tag :li, "#{current_user.person.name}" %>
			<%= content_tag :li, current_user.person.email %>
			<%= submenu_link 'Edit my profile', edit_person_path(current_user.person) %>
			<%= submenu_link 'Sign Out', destroy_user_session_path %>
		<% else %>
			<%= render partial: 'users/sessions/new' %>
		<% end %>
	<% end %> 
<% end %>
